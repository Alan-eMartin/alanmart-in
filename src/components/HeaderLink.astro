---
type Props = {
  text: string;
  link: string;
  newTab?: boolean
}

const { text, link, newTab = false } = Astro.props
---

<li class="header-link">
  <a target={newTab ? "_blank" : "_self"} href={link}>{text}</a>
</li>

<style>
  .header-link {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .header-link a {
    
  }
</style>