---
import { getPosts } from '@/sanity/sanity';
import PostLink from './PostLink.astro';

type Props = {
  title?: string;
};
const { title = 'All Articles' } = Astro.props;

// Sanity
const posts = await getPosts();
---

<section class="container mx-auto border-x border-b border-black p-6 bg-white">
  <h2 class="text-2xl md:text-3xl text-center mb-6">{title}</h2>
  <div class="container mx-auto flex gap-6 flex-wrap">
    {posts.map((p) => <PostLink post={p} />)}
  </div>
</section>
